@model IEnumerable<OpenOrderFramework.Models.Catagorie>

@{
    ViewBag.Title = "Daftar Kategori";
}

<h2>Daftar Kategori</h2>

<p>
    @Html.ActionLink("Tambah Kategori", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Rincian", "Details", new { id=item.ID }) |
            @Html.ActionLink("Hapus", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
